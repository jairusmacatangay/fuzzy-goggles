@model VitasysEHR.Models.ViewModels.ReceiptViewVM
@{
    Layout = "/Areas/PatientPortal/Views/_PatientPortalLayout.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-sm mt-3 pp-card-75-100">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-start mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-receipt me-2" style="font-size: 2rem"></i>
                    <h1 class="m-0 fw-bolder">Receipts</h1>
                </div>

                <div>
                    <div class="alert alert-warning" style="max-width: 13.5rem;">
                        <h2 class="alert-heading fw-bold">Balance Due:</h2>
                        <h3 class="mb-0">&#8369; @Model.BalanceDue</h3>
                    </div>
                </div>
                
            </div>
            
            <div class="table-responsive-sm">
                <table id="receiptsTable" class="table table-striped table-borderless w-100 table-rounded">
                    <thead class="bg-primary text-white">
                        <tr style="letter-spacing: 1.4px;">
                            <th>ID</th>
                            <th>DATE</th>
                            <th>CLINIC</th>
                            <th>PAYMENT STATUS</th>
                            <th>TOTAL AMOUNT</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle"></tbody>
                </table>
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/js/receipt.js"></script>
}
