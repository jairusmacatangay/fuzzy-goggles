@model Patient

<div class="card mt-3 shadow-sm mx-auto" style="width: 25rem;">

    <div class="card-body">
        <form id="patient" method="post">
            <h1 class="text-center fw-bolder">Patient Portal Login</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="d-grid">
                <button onclick="Validate()" id="login-submit" type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt me-2"></i>Log in</button>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}