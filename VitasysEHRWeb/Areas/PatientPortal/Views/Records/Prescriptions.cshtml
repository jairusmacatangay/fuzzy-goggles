@{
    Layout = "/Areas/PatientPortal/Views/_PatientPortalLayout.cshtml";
}

<div class="card shadow-sm mt-3 w-100">
    <div class="card-body">
        <div class="flex-wrap mb-4">

            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-pills me-2" style="font-size: 2rem"></i>
                <h1 class="m-0 fw-bolder">Prescriptions</h1>
            </div>

        <div class="table-responsive-lg">
                <table id="prescriptionTable" class="table table-hover table-striped border w-100 table-rounded">
                <thead class="bg-primary text-white">
                    <tr class="th-letter-spacing">
                        <th>ID</th>
                        <th>CLINIC</th>
                        <th>DRUG</th>
                        <th>DOSAGE</th>
                        <th>DOSE</th>
                        <th>QUANTITY</th>
                        <th>DATE</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody class="align-middle"></tbody>
            </table>
        </div> 

    </div>
</div>

@section Scripts{

    <script src="~/js/portal-prescription.js"></script>
}