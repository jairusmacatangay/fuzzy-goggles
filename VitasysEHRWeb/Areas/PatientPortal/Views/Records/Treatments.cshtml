@{
    Layout = "/Areas/PatientPortal/Views/_PatientPortalLayout.cshtml";
}

<div class="card shadow-sm mt-3 w-100">
    <div class="card-body">
        <div class="flex-wrap mb-4">
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-file-medical me-2" style="font-size: 2rem"></i>
                <h1 class="m-0 fw-bolder">Treatments List</h1>
            </div>

            <div class="table-responsive-lg">
                <table class="table table-striped table-hover w-100 table-rounded" id="treatmentRecordsTable">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>ID</th>
                            <th>TREATMENT</th>
                            <th>TOOTH NO./S</th>
                            <th>CLINIC</th>
                            <th>DENTIST/S</th>
                            <th>QUANTITY</th>
                            <th>PRICE</th>
                            <th>DATE CREATED</th>
                            <th>LAST MODIFIED</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/portal-treatments.js"></script>
    <script>
        $(document).ready(function () {
            $('#treatmentRecordsTable').DataTable();
        });
    </script>
}
