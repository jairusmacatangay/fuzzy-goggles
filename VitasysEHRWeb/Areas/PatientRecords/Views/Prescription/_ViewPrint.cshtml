@model VitasysEHR.Models.ViewModels.PrescriptionVM

@if (Model != null && Model.Prescription != null)
{
    <div class="rd-margin">

        <div class="text-center">
            <h1 class="m-0">@Model.ClinicName</h1> <!--Clinic Name-->
            <p class="m-0">@Model.Address</p> <!--Clinic Address-->
            <p class="m-0">@Model.Address, @Model.City, @Model.Province, @Model.ZipCode</p> <!--Clinic City, Province, ZipCode-->
            <p class="m-0">@Model.OfficePhone | @Model.MobilePhone </p> <!--Clinic OfficePhone, MobilePhone-->
            <p class="m-0">@Model.EmailAddress</p> <!--Clinic Email-->
        </div>

        <hr />
        <div class="d-flex justify-content-between flex-wrap">
            <p class="m-0"><b>Patient Name: </b>@Model.Fullname</p> <!--Patient Name-->
            <p class="m-0"><b>Age: </b>@Model.Age</p> <!--Calculate patient age-->
            <p class="m-0"><b>Gender: </b>@Model.Gender</p> <!--Patient Gender-->
            <p class="m-0"><b>Date: </b>@Model.DateAdded</p> <!--Prescription DateAdded-->
        </div>

        <p><b>Address: </b>@Model.Address, @Model.City, @Model.Province, @Model.ZipCode</p> <!--Patient Address, City, Province, ZipCode-->

        <img src="~/img/resources/rx-icon.png" style="width:50px;" class="mt-3 mb-5" alt="Rx icon" />

        <div class="mt-5 mb-5 text-center">
            <p>@Model.Drug @Model.Dosage @Model.Dose #@Model.Quantity</p> <!--Drug Dosage #Quantity-->
            <p>Sig: @Model.Sig</p> <!--Sig-->
        </div>

        <div class="pt-5 pl-5" style="width: 200px;">
            <div class="d-flex">
                <div>Signature: </div>
                <div class="underline"></div>
            </div>
            <div class="d-flex">
                <div>PRC No:</div>
                <div class="underline"></div>
            </div>
            <div class="d-flex">
                <div>PTR No:</div>
                <div class="underline"></div>
            </div>
        </div>

        <form asp-action="PrintPrescription" method="get">
            <input type="hidden" value="@Model.Prescription.Id" name="prescriptionId" />
            <button type="submit" class="btn btn-primary mt-4"><i class="fas fa-print me-2"></i>Print</button>
        </form>
    </div>
}