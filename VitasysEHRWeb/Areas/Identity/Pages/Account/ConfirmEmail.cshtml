@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<!--Verified Message-->
<div class="card mx-auto mt-3 shadow-sm message-card-sm">
    <div class="card-body">
        <i class="fas fa-check-circle text-success d-flex justify-content-center mb-3" style="font-size: 100px;"></i>
        <h1 class="text-center fw-bolder">Verified</h1>
        <hr />
        <p class="m-0 text-center">
            You may now use your EHR account. Try to <a asp-area="Identity" asp-page="/Account/Login">login</a> to your account.
        </p>
    </div>
</div>






