@model VitasysEHR.Models.ViewModels.EmployeeVM

<div class="text-center">
    @if (Model.ApplicationUser.ProfPicUrl != null)
    {
        <img src="@Model.ApplicationUser.ProfPicUrl" class="img-fluid w-50 rounded-3 shadow-sm" alt="Employee profile picture" />
    }
    else
    {
        <img src="~/img/patients/prof-pic-placeholder.png" class="img-fluid w-50 rounded-3 shadow-sm" alt="Employee profile picture" />
    }
</div>

<h3 class="mt-3 text-center fw-bold">@Model.ApplicationUser.FirstName @(Model.ApplicationUser.MiddleName != null ? Model.ApplicationUser.MiddleName : "") @Model.ApplicationUser.LastName</h3>

<ul class="list-unstyled">
    <li class="mb-2">
        <div class="row">
            <div class="col-2 d-flex align-items-center justify-content-end">
                <i class="fas fa-venus-mars p-2 bg-light fs-20 text-muted"></i>
            </div>
            <div class="col-10">
                <div class="d-flex flex-column">
                    <p class="m-0 text-muted fw-bold">Gender</p>
                    <p class="m-0">@Model.ApplicationUser.Gender</p>
                </div>
            </div>
        </div>
    </li>
    <li class="mb-2">
        <div class="row">
            <div class="col-2 d-flex align-items-center justify-content-end">
                <i class="fas fa-birthday-cake p-2 bg-light fs-20 text-muted"></i>
            </div>
            <div class="col-10">
                <div class="d-flex flex-column">
                    <p class="m-0 text-muted fw-bold">Date of Birth</p>
                    <p class="m-0">@Model.ApplicationUser.DOB</p>
                </div>
            </div>
        </div>
    </li>
    <li class="mb-2">
        <div class="row">
            <div class="col-2 d-flex align-items-center justify-content-end">
                <i class="fas fa-user-tag p-2 bg-light fs-20 text-muted"></i>
            </div>
            <div class="col-10">
                <div class="d-flex flex-column">
                    <p class="m-0 text-muted fw-bold">Access Control Role</p>
                    <p class="m-0">@string.Join(", ", @Model.SelectedRoles)</p>
                </div>
            </div>
        </div>
    </li>
    <li class="mb-2">
        <div class="row">
            <div class="col-2 d-flex align-items-center justify-content-end">
                <i class="fas fa-envelope p-2 bg-light fs-20 text-muted"></i>
            </div>
            <div class="col-10">
                <div class="d-flex flex-column">
                    <p class="m-0 text-muted fw-bold">Date of Birth</p>
                    <p class="m-0">@(Model.ApplicationUser.Email != null ? Model.ApplicationUser.Email : "N/A")</p>
                </div>
            </div>
        </div>
    </li>
    <li class="mb-2">
        <div class="row">
            <div class="col-2 d-flex align-items-center justify-content-end">
                <i class="fas fa-map-marker-alt p-2 bg-light fs-20 text-muted"></i>
            </div>
            <div class="col-10">
                <div class="d-flex flex-column">
                    <p class="m-0 text-muted fw-bold">Address</p>
                    <p class="m-0">@Model.ApplicationUser.Address, @Model.ApplicationUser.City, @Model.ApplicationUser.Province, @Model.ApplicationUser.ZipCode</p>
                </div>
            </div>
        </div>
    </li>
</ul>