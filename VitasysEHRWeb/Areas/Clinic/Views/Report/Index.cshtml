@model VitasysEHR.Models.ViewModels.ReportVM
@{
    ViewData["Title"] = "Report";
}

@if (Model != null)
{
    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <div class="d-flex align-items-center">
                <i class="fas fa-file-alt me-2" style="font-size: 2rem;"></i>
                <h1 class="mb-0 fw-bolder">Report Generation</h1>
            </div>
            

            <div class="row mt-3">
                <div class="col-sm-3">
                    <label class="form-label" for="selectedReport" hidden>Report</label>
                    <select asp-for="@Model.ReportId" asp-items="@Model.ReportList" class="form-select" id="selectedReport">
                        <option disabled selected value="0">Select Report</option>
                    </select>
                    <span class="text-danger" id="selectedReportError"></span>
                </div>
            </div>

            <div id="reportForm"></div>

            <button type="button" class="btn btn-primary mt-3 mb-4" id="generateReportBtn"><i class="fas fa-file-alt me-2"></i>Generate Report</button>
            
            <div id="generatedReport">
                <div class="text-center py-5 mt-5 mb-5">
                    <i class="fas fa-table d-flex justify-content-center mb-3" style="font-size: 150px;"></i>
                    <p>There's nothing to see here! <br /> Choose a report to generate from the dropdown menu above!</p>
                </div>
            </div>

        </div>
    </div>
}

<script src="~/js/report-generation.js"></script>