@{
    ViewData["Title"] = "Appointments";
}

<div style="height: 90vh;">
    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <div class="d-flex align-items-center mb-4">
                <i class="fas fa-calendar-check me-3" style="font-size: 2rem"></i>
                <h1 class="m-0 fw-bolder">Appointment List</h1>
            </div>

            <div class="table-responsive-sm mt-3">
                <table id="appointmentTable" class="table table-striped table-borderless w-100 table-rounded">
                    <thead class="bg-primary text-white">
                        <tr class="th-letter-spacing">
                            <th>ID</th>
                            <th>DATE</th>
                            <th>TimeId</th>
                            <th>TIME</th>
                            <th>PATIENT</th>
                            <th>STATUS</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<!--View Appointment Modal-->
<div class="modal fade" id="viewAppointmentModal" tabindex="-1" aria-labelledby="viewAppointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-24 m-0" id="viewAppointmentModalLabel">View Appointment Details</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewAppointmentModalBody">
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/clinic-appointment.js"></script>
}
